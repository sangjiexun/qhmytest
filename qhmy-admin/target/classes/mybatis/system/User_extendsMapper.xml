	<!-- 用户列表 -->
	<select id="userlistPage" parameterType="page" resultType="pd" >
		select  
		<include refid="Field"></include>
		from <include refid="tableName"></include> u
		where 1=1 
		<if test="pd.ROLE_ID != null and pd.ROLE_ID != ''"><!-- 用户检索 -->
			and u."USER_ID"=#{pd.USER_ID} 
		</if>
		order by u."USER_ID" desc
	</select>
	
	<select id="userlist" parameterType="pd" resultType="pd">
	
	select  
		<include refid="Field"></include>
		from <include refid="tableName"></include> where user_id=#{user_id};
	
	</select>
	
	
	
	
	<!-- 新增用户 -->
	<insert id="saveU" parameterType="pd" >
		insert into <include refid="tableName"></include> (
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>
	
	
	
	<!-- 获取总数 -->
	<select id="getUserCount" parameterType="String" resultType="pd">
		select 
			count("USER_ID") "userCount"
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- luzhen -->
	<select id="queryLabourByCardNumber" parameterType="pd" resultType="pd">
		select count(1) as sl from t_laowurenyuan_card where KAHAO=#{kahao} and zhuangtai!=3
	</select>
	<select id="queryLabourByPkid" parameterType="pd" resultType="pd">
		select count(1) as rs from t_laowurenyuan_card where  laowurenyuan_pkid = #{laowurenyuan_pkid} and zhuangtai=1
	</select>
	
	<insert id="insertLaowurenyuanCard" parameterType="pd">
		insert into t_laowurenyuan_card(laowurenyuan_pkid,kahao,gonghao,pkid)
		values(
	       #{laowurenyuan_pkid},#{kahao},#{laowurenyuan_gonghao},#{pkid}
		)
	</insert>
	<delete id="deleteCard">
		delete from t_laowurenyuan_card where laowurenyuan_pkid = #{laowurenyuan_pkid}
	</delete>
	
	<insert id="insertCardQx" parameterType="pd">
		insert into t_laowurenyuan_card_qx(laowurenyuan_card_pkid,mengang_pkid)
		values(
			#{pkid},#{mengang_pkid}
		)
